    <!-- Initialize Swiper -->
    <script>
      var swiper = new Swiper(".mySwiper", {
      	slidesPerView: 2,
      });

      var swiper = new Swiper(".mySwiperR", {
      	slidesPerView: 1,
        pagination: {
          el: ".swiper-pagination",
          clickable: true,
          
        },
      });

      $(document).ready(function(){

      let position = 0;

	
	const item = $('.slider-item');
	const itemWidh = item.width();
	const track = $('.slider-track');

      const AutoSlide = () =>{
		position = position - itemWidh;
		if(-position<=item.width()*3){
			setPosition();
			const btn = (-position) / itemWidh +1;
			if(btn===2){
				$('.btn_2').addClass('active');
				$('.btn_1').removeClass('active');
				$('.btn_3').removeClass('active');
				$('.btn_4').removeClass('active');
			}
			if(btn===3){
				$('.btn_3').addClass('active');
				$('.btn_1').removeClass('active');
				$('.btn_2').removeClass('active');
				$('.btn_4').removeClass('active');
			}
			if(btn===4){
				$('.btn_4').addClass('active');
				$('.btn_1').removeClass('active');
				$('.btn_3').removeClass('active');
				$('.btn_2').removeClass('active');
			}
		}else{
			position = 0;
			setPosition();
				$('.btn_1').addClass('active');
				$('.btn_4').removeClass('active');
				$('.btn_3').removeClass('active');
				$('.btn_2').removeClass('active');
		}
		
	}

	const setPosition = () => {
		track.css({
			transform: 'translateX('+position+'px)',
		});
	}
	setInterval(AutoSlide,4000);
});

	



    </script>
  


